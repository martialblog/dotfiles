###ALIASES###

#Python
alias pyvenv='python3 -m venv'
alias python='python3'
alias p='python3'

#Emacs
alias ecdaemon='test -e "/tmp/emacs1000/server" || emacs --daemon'
alias e='emacsclient -t'
alias ect='emacsclient -t'
alias ecc='emacsclient -c'
alias ec='emacsclient'

#Other
alias lock='swaylock -f -c 5E2750'
alias nautilus='nautilus --no-desktop'
alias control-center='env XDG_CURRENT_DESKTOP=GNOME gnome-control-center'
alias be='bundler exec'
alias us='setxkbmap -option ctrl:nocaps us'
alias ru='setxkbmap -option ctrl:nocaps ru'
alias de='setxkbmap -option ctrl:nocaps de'
alias де='setxkbmap -option ctrl:nocaps de'

alias git-history='git log -p --'